{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": ["esnext", "dom"]
  },
  "include": ["src/*"]
}
