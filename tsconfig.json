{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": ["esnext", "dom"]
  },
  "exclude": ["node_modules", "dist"]
}
